extends layout

block content
  div.max-w-6xl.mx-auto.p-4
    div.bg-red-600.text-white.p-6.rounded-lg.mb-6
      h1.text-3xl.font-bold.mb-4 Error
      p.text-xl= message
      if error.stack && process.env.NODE_ENV === 'development'
        pre.mt-4.bg-red-800.p-4.rounded.overflow-x-auto.text-sm= error.stack

    div.mt-6.text-center
      a.inline-block.bg-blue-700.hover:bg-blue-500.text-white.font-bold.py-2.px-4.rounded-md.cursor-pointer(href="/")
        i.fas.fa-home.mr-2 Back home